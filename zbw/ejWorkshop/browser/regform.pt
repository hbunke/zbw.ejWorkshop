    <metal:main fill-slot="main">    

      <h1 class="documentFirstHeading">
        Workshop Registration
      </h1>

      <p>Yes, you can...!</p>
              
      
      <form style="float:none; margin-bottom:18px;" tal:attributes="action context/absolute_url"
